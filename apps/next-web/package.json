{
  "name": "next-web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "yarn dockerClear; run-p hasuraLocal genWatch devNext startNgrok",
    "devNext": "cross-env NODE_OPTIONS=\"--inspect\" next dev -p 3001",
    "devRemote": "run-p devNext genWatchRemote",
    "dockerClear": "docker ps -aq | xargs -I {} docker stop {}; docker ps -aq | xargs -I {} docker rm {}",
    "start": "next start",
    "export": "next export",
    "format": "prettier --write .",
    "graphql-codegen": "graphql-codegen --config codegen.ts",
    "gen": "graphql-codegen --config codegen.ts eslint ../../packages/graphql/generated/**/*.ts --fix",
    "genRemote": "graphql-codegen --config codegen.remote.js ",
    "genWatch": "node ./hasura/wait-for-url.js && chokidar \"../../packages/graphql/generated/**/*.gql\" \"./hasura/migrations/**/*.sql\" --initial -c \"yarn gen\"",
    "genWatchRemote": "chokidar \"../../packages/graphql/generated/**/*.gql\" --initial -c \"yarn genRemote\"",
    "hasuraLocal": "run-p hasuraStart hasuraConsole",
    "hasuraStart": "(cd ./hasura; docker-compose up)",
    "hasuraConsole": "(cd ./hasura; node ./wait-for-url.js && hasura console --skip-update-check --no-browser --console-port 9690)",
    "migrateLocalToStaging": "set -o allexport && . ./.env.local && set +o allexport && (cd ./hasura; hasura migrate apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET; hasura metadata apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET)",
    "migrationLocalApply": "set -o allexport && . ./.env.local && set +o allexport && (cd ./hasura; hasura migrate apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET; hasura metadata apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET)",
    "remove-local-database": "(cd ./hasura; docker-compose down -v)",
    "startNgrok": "ngrok http --region=eu --hostname=localhostsupertokens.eu.ngrok.io 3001",
    "lint": "eslint --fix -c ./.eslintrc.js src && next lint --fix -c ./.eslintrc.js src",
    "checkAll": "yarn lint && yarn test:ci && yarn build && yarn gen",
    "push": "yarn checkAll && git push"
  },
  "dependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/named-operations-object": "^2.3.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "6.0.0-alpha-20230811215938-77de575f5",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-query": "^4.1.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "@hookform/resolvers": "^3.3.1",
    "@next/font": "^13.4.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tanstack/react-query": "^4.29.5",
    "@tanstack/react-query-devtools": "^4.29.6",
    "@tippyjs/react": "^4.2.6",
    "@types/express": "^4.17.15",
    "@types/node": "^18.7.14",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "autoprefixer": "^10.4.0",
    "clsx": "^1.2.1",
    "config": "*",
    "dotenv": "^16.0.3",
    "eslint": "^8.5.0",
    "graphql-generated": "*",
    "graphql-lib": "*",
    "jest-watch-typeahead": "^2.2.2",
    "lib": "*",
    "msw": "^1.2.1",
    "next": "^13.4.19",
    "nextjs-cors": "^2.1.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "qs": "^6.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-hot-toast": "^2.4.1",
    "react-responsive": "^9.0.2",
    "supertokens-node": "14.1.3",
    "supertokens-web-js": "0.6.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "typescript": "^4.9.4",
    "ui": "*",
    "zod": "^3.22.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5"
  }
}
