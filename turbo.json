{
  "$schema": "https://turborepo.org/schema.json",

  "pipeline": {
    "lint": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "sync:app": {},
    "open:ios": {
      "cache": false
    },
    "open:android": {
      "cache": false
    },
   
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    }
 
  },
  "globalEnv": [

    "SUPERTOKENS_API_KEY",
    "SUPERTOKENS_CONNECTION_URI",
    "NEXT_PUBLIC_APP_STAGE"
  ]
}
