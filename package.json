{
  "name": "turborepo-trpc-pnpm",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev --parallel",
    "test": "dotenv -- turbo run test",
    "lint": "dotenv -- turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "api": "workspace:^0.1.0",
    "app": "workspace:^0.1.0",
    "config": "workspace:^0.1.0",
    "db": "workspace:^0.1.0",
    "lib": "workspace:^0.1.0",
    "tsconfig": "workspace:^0.1.0",
    "ui": "workspace:^0.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "dotenv-cli": "latest",
    "esbuild": "^0.17.19",
    "esbuild-jest": "^0.5.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "msw": "^1.3.2",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.16",
    "typescript": "5.2.2"
  },
  "resolutions": {
    "typescript": "5.2.2",
    "eslint": "8.5.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.14"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
